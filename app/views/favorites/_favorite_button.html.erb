<% if current_user.favoriting?(micropost) %>
  <%= form_with(model: current_user.favorites.find_by(micropost: micropost.id), method: :delete) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id, { 'id' => 'micropost_id_' + micropost.id.to_s } %>
    <%= f.submit 'UnFavorite', class: 'btn btn-danger btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id, { 'id' => 'micropost_id_' + micropost.id.to_s } %>
    <%= f.submit 'Favorite', class: 'btn btn-primary btn-sm' %>
  <% end %>
<% end %>